{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "node16",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "site-template/next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next.config.js",
    "pages/_app.js",
    "pages/api/send-mail.ts"
  ],
  "exclude": ["node_modules"]
}
